{
    "plugins": ["theme-default", "-lunr", "-search", "search-plus", "addcssjs", "favicon-plus", "anchors", "github-buttons", "last-modified", "medium-zoom"],
    "pluginsConfig": {
        "fontsettings": {
            "theme":  "night",
            "family": "sans"
        },
        "addcssjs": {
          "css": [
            "build-files/styles/website.css"
          ]
        },
        "github-buttons": {
          "buttons": [{
            "user": "dortania",
            "repo": "OpenCore-Desktop-Guide",
            "type": "star",
            "size": "large"
          }]
        },
        "intopic-toc": {
          "label": "Navigation"
        },
        "github-edit": {
            "repo": "dortania/Opencore-Desktop-Guide",
            "branch": "master"
        },
        "favicon": "/icons/favicon.ico",
        "appleTouchIconPrecomposed152": "/icons/appleTouchIconPrecomposed152.png",
        "output": "_book"
    },
    "links": {
        "sharing": {
            "google": false,
            "facebook": false,
            "twitter": false,
            "weibo": false,
            "all": false
        }
    },
    "medium-zoom": {
      "margin": 24,
      "background": "#363b40",
      "scrollOffset": 0
    },
    "pdf": {
        "pageNumbers": false,
        "fontSize": 12,
        "paperSize": "a4",
        "margin": {
            "right": 62,
            "left": 62,
            "top": 36,
            "bottom": 36
        },
        "headerTemplate": null,
        "footerTemplate": null
    }
}
